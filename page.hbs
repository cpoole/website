{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{> cover-single}}

<div class="main-content-area">
	<div class="container">
		<div class="row">
			{{#post}}
			<div class="col-md-8 col-sm-12 col-md-offset-2">
				<article class="card card-single post-wrap {{post_class}}">
					<div class="single-head">
						<h2 class="h1 title">{{title}}</h2>
					</div>
					<div class="card-header {{^if img_url feature_image}}no-image{{/if}}">
						{{#if img_url feature_image}}
						<img src="{{img_url feature_image}}">
						{{/if}}
					</div>
					<div class="content">
						<div class="post-entry">
							{{content}}
						</div>
					</div>
				</article>
			</div>
			{{/post}}
		</div>
	</div>
</div>
